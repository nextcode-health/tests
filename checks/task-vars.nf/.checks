set -e

#
# run normal mode
#
echo ''
$NXF_RUN | tee stdout

[[ `grep 'INFO' .nextflow.log | grep -c 'Submitted process > printVars'` == 1 ]] || false

< stdout grep 'cpus: 10'
< stdout grep 'penv: mpi'
< stdout grep 'time: 1d'
< stdout grep 'memory: 1 GB'


#
# RESUME mode
#
echo ''
$NXF_RUN -resume | tee stdout

[[ `grep 'INFO' .nextflow.log | grep -c 'Cached process > printVars'` == 1 ]] || false

< stdout grep 'cpus: 10'
< stdout grep 'penv: mpi'
< stdout grep 'time: 1d'
< stdout grep 'memory: 1 GB'